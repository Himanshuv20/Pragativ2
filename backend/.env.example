# Environment Variables for Crop Calendar API

# Server Configuration
PORT=5000
NODE_ENV=development

# API Keys (Replace with your actual API keys)
NASA_API_KEY=your_nasa_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Cloud Translation API Configuration
# Option 1: Use service account key file (recommended for production)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
# Option 2: Use API key (simpler setup for development)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Chatbot and AI Integration
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Database Configuration (if using database in future)
# DATABASE_URL=your_database_url_here

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# JWT Secret for Authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Chatbot Configuration
CHATBOT_MAX_HISTORY=50
CHATBOT_RESPONSE_TIMEOUT=30000

# External API Endpoints
AGMARKNET_API_URL=https://api.data.gov.in/resource/9ef84268-d588-465a-a308-a864a43d0070
COPERNICUS_API_URL=https://catalogue.dataspace.copernicus.eu
